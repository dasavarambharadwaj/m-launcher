<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/material_expressive_padding_medium"
    android:background="?attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:minHeight="@dimen/material_expressive_touch_target_min">

    <!-- Drag Handle -->
    <ImageView
        android:id="@+id/drag_handle"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="@dimen/material_expressive_spacing_medium"
        android:src="@drawable/ic_drag_handle"
        android:contentDescription="Drag to reorder"
        android:tint="@color/launcher_text_secondary" />

    <!-- App Name -->
    <TextView
        android:id="@+id/app_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAppearance="@style/LauncherTextAppearance"
        android:textColor="@color/launcher_text_dynamic"
        android:singleLine="true"
        android:ellipsize="end" />

    <!-- Remove Button -->
    <ImageView
        android:id="@+id/remove_button"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="@dimen/material_expressive_spacing_medium"
        android:src="@drawable/ic_remove"
        android:contentDescription="Remove from favorites"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:tint="@color/launcher_text_secondary" />

</LinearLayout>