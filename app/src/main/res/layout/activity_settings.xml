<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/settings_background"
    android:fitsSystemWindows="true">

    <!-- Material Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/settings_toolbar_background"
        android:elevation="4dp"
        app:titleTextColor="@color/launcher_text_dynamic"
        app:navigationIconTint="@color/launcher_text_dynamic" />

    <!-- Main Content ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/material_expressive_padding_medium">

            <!-- Selected Favorites Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Selected Favorites"
                android:textAppearance="@style/LauncherTextAppearance"
                android:textSize="@dimen/material_expressive_text_size_title"
                android:textColor="@color/launcher_text_dynamic"
                android:layout_marginBottom="@dimen/material_expressive_spacing_medium" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Drag to reorder • Swipe to remove • Maximum 7 apps"
                android:textAppearance="@style/LauncherTextAppearance"
                android:textSize="14sp"
                android:textColor="@color/launcher_text_secondary"
                android:layout_marginBottom="@dimen/material_expressive_spacing_medium" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/favorites_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/material_expressive_spacing_large"
                android:nestedScrollingEnabled="false" />

            <!-- Available Apps Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Available Apps"
                android:textAppearance="@style/LauncherTextAppearance"
                android:textSize="@dimen/material_expressive_text_size_title"
                android:textColor="@color/launcher_text_dynamic"
                android:layout_marginBottom="@dimen/material_expressive_spacing_medium" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tap to add to favorites"
                android:textAppearance="@style/LauncherTextAppearance"
                android:textSize="14sp"
                android:textColor="@color/launcher_text_secondary"
                android:layout_marginBottom="@dimen/material_expressive_spacing_medium" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/installed_apps_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />

        </LinearLayout>

    </ScrollView>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/material_expressive_padding_medium"
        android:background="@color/settings_toolbar_background"
        android:elevation="4dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/cancel_button"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/material_expressive_spacing_small"
            android:text="Cancel"
            android:textColor="@color/launcher_text_dynamic"
            android:background="@android:color/transparent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/save_button"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/material_expressive_spacing_small"
            android:text="Save"
            android:textColor="@color/launcher_text_dynamic"
            android:background="@android:color/transparent" />

    </LinearLayout>

</LinearLayout>