<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mlauncher" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Minimal Launcher Theme using Material Expressive (Material Design 3) -->
    <style name="LauncherTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Material Expressive color system for minimal design -->
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorOnPrimary">@color/launcher_text_light</item>
        <item name="colorSurface">@android:color/transparent</item>
        <item name="colorOnSurface">@color/launcher_text_light</item>
        
        <!-- Material Expressive typography system -->
        <item name="textAppearanceBodyLarge">@style/LauncherTextAppearance</item>
        <item name="textAppearanceBodyMedium">@style/LauncherTextAppearance</item>
        
        <!-- Wallpaper background configuration -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        
        <!-- Standard launcher window configuration -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Material Expressive elevation and shadows disabled for minimal design -->
        <item name="elevationOverlayEnabled">false</item>
    </style>

    <!-- Material Expressive typography for launcher text -->
    <style name="LauncherTextAppearance" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/launcher_text_dynamic</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

</resources>